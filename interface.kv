<Manager>:
    MenuInitial:
        name: 'menuinitial'
    HomeScreen:
        name: 'homescreen'

<MenuInitial>:
    BoxLayout:
        orientation: 'vertical'
        padding: 150
        spacing: 25
        Image:
            source: 'images/chatbot.png'
            size_hint_y: None
            height: 220
            allow_stretch: True
        Button:
            text: 'Comece a Conversar!'
            on_release: app.root.current = 'homescreen'
        Button:
            text: 'Sair do Aplicativo'
            on_release: app.stop()

<HomeScreen>:
    BoxLayout:
        orientation: 'vertical'
        ActionBar: 
            ActionView:
                ActionPrevious: 
                    title: 'Chatbot'
                    on_release: app.root.current = 'menuinitial'
                ActionButton:
                    text: 'Sair'
                    on_release: app.stop()
        ScrollView:
            BoxLayout:
                id:box
                orientation:'vertical'
                size_hint_y:None
                height: self.minimum_height
        BoxLayout:
            size_hint_y: None
            height: 50
            TextInput:
                id: texto
            Button:
                text:'>'
                size_hint_x: None
                width: 50
                on_release: root.mensagem(texto.text)
            Button:
                text:'AUDIO'
                size_hint_x: None
                width: 50
                on_release: root.mensagem_audio(texto.text)

<Message>:
    size_hint_y: None
    height: 120
    Label:
        id:label
        font_size: 30
    Button:
        text: 'X'
        size_hint_x: None
        width: 50
        on_release: app.root.get_screen('homescreen').ids.box.remove_widget(root)